{
	"mcpServers": {
		"playwright": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"@playwright/mcp@latest"
			],
			"description": "Browser automation and testing"
		},
		"context7": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"@upstash/context7-mcp"
			],
			"description": "Advanced context management for AI interactions"
		},
		"semgrep": {
			"type": "stdio",
			"command": "uvx",
			"args": [
				"semgrep-mcp"
			],
			"description": "Static code analysis and security scanning with Semgrep"
		},
		"exa": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"exa-mcp-server"
			],
			"env": {
				"EXA_API_KEY": "357549da-6be1-41e2-a8d8-2e7fb238d42d"
			},
			"description": "Advanced AI-powered web search and research capabilities"
		},
		"task-master-ai": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"--package=task-master-ai",
				"task-master-ai"
			],
			"env": {
				"ANTHROPIC_API_KEY": "YOUR_ANTHROPIC_API_KEY_HERE",
				"PERPLEXITY_API_KEY": "YOUR_PERPLEXITY_API_KEY_HERE",
				"OPENAI_API_KEY": "YOUR_OPENAI_KEY_HERE",
				"GOOGLE_API_KEY": "YOUR_GOOGLE_KEY_HERE",
				"XAI_API_KEY": "YOUR_XAI_KEY_HERE",
				"OPENROUTER_API_KEY": "YOUR_OPENROUTER_KEY_HERE",
				"MISTRAL_API_KEY": "YOUR_MISTRAL_KEY_HERE",
				"AZURE_OPENAI_API_KEY": "YOUR_AZURE_KEY_HERE",
				"OLLAMA_API_KEY": "YOUR_OLLAMA_API_KEY_HERE"
			}
		},
		"mysql-staging": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"@benborla/mcp-server-mysql"
			],
			"env": {
				"MYSQL_HOST": "127.0.0.1",
				"MYSQL_PORT": "3307",
				"MYSQL_USER": "ibimfste_staging",
				"MYSQL_PASSWORD": "your_mysql_password_here",
				"MYSQL_DATABASE": "ibimfste_staging"
			},
			"description": "MySQL connection to TCS staging server via SSH tunnel"
		},
		"rhino": {
			"type": "stdio",
			"command": "uvx",
			"args": [
				"rhinomcp"
			],
			"description": "Rhino 3D CAD integration for measurements and geometry"
		}
	}
}
