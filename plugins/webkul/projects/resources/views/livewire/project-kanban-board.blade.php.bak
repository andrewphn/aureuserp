    @script
    <script>
        Alpine.data('kanbanBoard', () => ({
            draggedProjectId: null,
            dragOverStage: null,
            dropIndex: null,

            onDragStart(event, projectId) {
                this.draggedProjectId = projectId;
                event.target.classList.add('dragging');
                event.dataTransfer.effectAllowed = 'move';
                event.dataTransfer.setData('text/plain', projectId);

                // Create custom drag image for better feedback
                const dragImage = event.target.cloneNode(true);
                dragImage.style.position = 'absolute';
                dragImage.style.top = '-1000px';
                dragImage.style.opacity = '0.8';
                dragImage.style.transform = 'rotate(2deg) scale(0.95)';
                document.body.appendChild(dragImage);
                event.dataTransfer.setDragImage(dragImage, 140, 50);
                setTimeout(() => document.body.removeChild(dragImage), 0);
            },

            onDragEnd(event) {
                event.target.classList.remove('dragging');
                this.draggedProjectId = null;
                this.dragOverStage = null;
                this.dropIndex = null;
            },

            onDragOver(event, stageId) {
                event.preventDefault();
                event.dataTransfer.dropEffect = 'move';
                this.dragOverStage = stageId;
            },

            onDragLeave(event) {
                // Only clear if leaving the column entirely
                if (!event.currentTarget.contains(event.relatedTarget)) {
                    this.dragOverStage = null;
                    this.dropIndex = null;
                }
            },

            updateDropIndex(event, index) {
                event.stopPropagation();
                const rect = event.currentTarget.getBoundingClientRect();
                const midpoint = rect.top + rect.height / 2;
                this.dropIndex = event.clientY < midpoint ? index : index + 1;
            },

            onDrop(event, stageId) {
                event.preventDefault();
                const projectId = parseInt(event.dataTransfer.getData('text/plain'));

                if (!projectId) return;

                // Use tracked drop index or append to end
                const position = this.dropIndex !== null ? this.dropIndex :
                    event.currentTarget.querySelectorAll('.kanban-card').length;

                // Reset state
                this.dragOverStage = null;
                this.dropIndex = null;

                // Dispatch Livewire event
                this.$wire.moveProject(projectId, stageId, position);
            }
        }));
    </script>
    @endscript

